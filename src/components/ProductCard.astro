---
export interface Props {
  name: string;
  description: string;
  price: number;
  image: string;
}
const { name, description, price, image } = Astro.props as Props;
---

<figure>
  <img
    class="w-full rounded-3xl shadow-2xl"
    src={image}
    alt=""
    width="1600"
    height="1200"
  />
  <div class="mt-4 flex justify-between px-6">
    <div>
      <h3 class="text-sm text-negroni-500">
        <a href="#">
          <span aria-hidden="true" class="absolute inset-0"></span>
          {description}
        </a>
      </h3>
      <p class="mt-1 text-lg font-medium leading-6 text-white">{name}</p>
    </div>
    <p class="text-base text-tomato-500">${price}</p>
  </div>
</figure>
